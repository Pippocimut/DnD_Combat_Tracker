<section class="pagination">

    <% if (pagination.currentPage > 1 && pagination.previousPage>1){%> 
        <a id="firstPage"href="/?page=1">1</a>
    <% } %>
    <% if (pagination.hasPreviousPage){%> 
        <a id ="previousPage" href="?page=<%=pagination.previousPage%>"><%= pagination.previousPage %></a>
    <% } %>
    <a id="currentPage" href="?page=<%=pagination.currentPage%>" class="active"><%= pagination.currentPage %></a>
    
    <% if (pagination.hasNextPage){%> 
        <a id ="nextPage" href="?page=<%=pagination.nextPage%>"><%= pagination.nextPage %></a>
    <% } %>
    <% if (pagination.lastPage > pagination.currentPage && pagination.nextPage < pagination.lastPage) {%> 
        <a id="lastPage" href="?page=<%=pagination.lastPage%>"><%= pagination.lastPage %></a>
    <% } %>
</section>